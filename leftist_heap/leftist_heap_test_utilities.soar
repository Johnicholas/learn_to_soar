sp {ecba*elaborate*initialize
   (state <s> ^superstate.operator <o>)
   (<o> ^name ecba
        ^return-to <r>)
-->
   (<s> ^name ecba
        ^return-to <r>
        ^c <c>
        ^bc <bc>
        ^abc <abc>)}

sp {ecba*propose*cba
   (state <s> ^name ecba
             -^cba-done)
-->
   (<s> ^operator <o> +)
   (<o> ^name cba
        ^return-to <s>)}

sp {ecba*elaborate*done
   (state <s> ^name ecba
              ^return-to <r>
              ^cba-done <cba>)
